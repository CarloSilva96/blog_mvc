<h1>Artigos</h1>

<%= render_se @artigos_recentes[0].present?, 'longer_featured', artigo: @artigos_recentes[0] %>

<div class="row mb-2" >  
  <%= render_se @artigos_recentes[1].present?, 'medium_featured', artigo: @artigos_recentes[1] %>
  <%= render_se @artigos_recentes[2].present?, 'medium_featured', artigo: @artigos_recentes[2] %>
</div>

<div class="row g-5">
  <div class="col-md-8">
    <h3 class="pb-4 mb-4 fst-italic border-bottom">
      From my Experience
    </h3>    

    <p><%= link_to 'New Article', new_artigo_path, class: "btn btn-primary" %></p>
    
    <!-- Rails consegue exibir cada artigo sabe que artigos é uma lista que contem artigo e renderiza o _artigo para cada iteração -->
    <%= render @artigos %>    

    <%= render 'pagination' %>
  </div>
  
  <%= render 'menu_lateral' %>
</div>